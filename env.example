# Environment Configuration Example
# Copy this file to .env and update the values

# Application Environment
ENV=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Dashboard Configuration  
DASHBOARD_PORT=8501
DASHBOARD_TITLE="EV Charging Demand Forecast"

# Database Configuration (if using a database)
# DATABASE_URL=postgresql://user:password@localhost:5432/ev_forecast

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Model Configuration
MODEL_PATH=models/xgboost_baseline.joblib

# Data Configuration
DATA_PATH=data/raw/synthetic_sessions.csv

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

# Security Configuration (for production)
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# External APIs (if any)
# WEATHER_API_KEY=your-weather-api-key
# MAPS_API_KEY=your-maps-api-key

# Feature Engineering Configuration
ENABLE_SPATIAL_FEATURES=false
ENABLE_WEATHER_FEATURES=false
LAG_HOURS=1,24,168
ROLLING_WINDOWS=24,72,168

# Model Training Configuration
TRAIN_TEST_SPLIT=0.8
VALIDATION_SPLIT=0.1
CROSS_VALIDATION_FOLDS=5
HYPERPARAMETER_TUNING=false

# Deployment Configuration
CONTAINER_REGISTRY=your-registry.com
IMAGE_TAG=latest
KUBERNETES_NAMESPACE=ev-forecast
